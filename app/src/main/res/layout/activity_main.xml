<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oncreat() call :1"
        android:textSize="22dp"
        android:id="@+id/create"
        android:textColor="#aeaeae"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onstart() call :1"
        android:textSize="22dp"
        android:id="@+id/start"
        android:textColor="#aeaeae"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onresume() call :1"
        android:textSize="22dp"
        android:id="@+id/resume"
        android:textColor="#aeaeae"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnResatrt() call :1"
        android:textSize="22dp"
        android:id="@+id/Restart"
        android:textColor="#aeaeae"></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity Two"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_marginLeft="100dp"
        android:padding="20dp"
        android:id="@+id/btnsctivity"
        android:layout_marginTop="30dp"></Button>



</LinearLayout>